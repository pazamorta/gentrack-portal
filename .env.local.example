# Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Backend API URL (optional, defaults to http://localhost:3001)
VITE_API_URL=http://localhost:3001

# ============================================================================
# SERVER-SIDE ONLY (Do not prefix with VITE_)
# These credentials are kept secure on the backend server
# ============================================================================

# Salesforce OAuth Credentials
# You need to create a Connected App in Salesforce to get these credentials
# See: https://help.salesforce.com/s/articleView?id=sf.connected_app_create.htm

# Salesforce login URL (use https://test.salesforce.com for sandbox)
SALESFORCE_LOGIN_URL=https://login.salesforce.com

# OAuth Client ID from your Salesforce Connected App
SALESFORCE_CLIENT_ID=your_client_id_here

# OAuth Client Secret from your Salesforce Connected App
SALESFORCE_CLIENT_SECRET=your_client_secret_here

# Salesforce username
SALESFORCE_USERNAME=your_salesforce_username@example.com

# Salesforce password
SALESFORCE_PASSWORD=your_salesforce_password

# Salesforce security token (optional, but usually required)
# Get this from: Setup → My Personal Information → Reset My Security Token
SALESFORCE_SECURITY_TOKEN=your_security_token_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Server port (optional, defaults to 3001)
PORT=3001
